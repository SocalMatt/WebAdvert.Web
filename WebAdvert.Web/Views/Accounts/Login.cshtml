    ViewData["Title"] = "Login Page";
}

@model WebAdvert.Web.Models.Accounts.LoginModel;

<div class="row">
    <div class="cold-md-4">
        <h4>Login using your email address and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If you are not a member you can sign up here
            </a>
        </h5>
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <h4>Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">

            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox row">
                    <label asp-for="RememberMe">Remember Me</label>
                    <input asp-for="RememberMe" class="form-control"/>
                </div>
            </div>

            <button type="submit" class="btn btn-default">Login</button>
            
        <h6>
            <a asp-controller="Accounts" asp-action="ForgotPassword">
                Forgot Password
            </a>
        </h6>
        </form>
    </div>
</div> 